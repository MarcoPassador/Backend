<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Inicia sesión</title>
    <%- include("../partials/head.ejs"); %>
</head>

<body>

    <form action="/api/signup" method="post" enctype="application/json">
        <div>
          <div>
            <div>
              <div>
                <div>
      
                  <div>
      
                    <h2>Registrarse</h2>

                    <p class="errorMsg"><%= message.join(", "); %></p>
                    <p>Ingresa tus datos para crear una cuenta</p>
      
                    <div>
                      <input type="text" id="username" name="username"  required/>
                      <label class="form-label" for="username">Nombre de usuario</label>
                    </div>

                    <div>
                        <input type="email" id="email" name="email"  required/>
                        <label class="form-label" for="email">Email</label>
                      </div>

                    <div>
                      <input type="password" id="password" name="password"  required/>
                      <label class="form-label" for="password">Contraseña</label>
                    </div>
      
                    <button type="submit">Registrarse</button>
      
                  </div>
      
                  <div>
                    <p class="mb-0">¿Ya tenés una cuenta? <a href="/api/login" class="text-white-50 fw-bold">Inicia sesión</a>
                    </p>
                  </div>
      
                </div>
              </div>
            </div>
          </div>
        </div>
    </form>

</body>

</html>