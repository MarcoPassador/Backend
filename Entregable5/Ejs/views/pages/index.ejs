<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Formulario de ingreso de productos ejs</title>
    
</head>
<body>
    <%- include("../partials/header.ejs"); %>
    <h2>Ingrese un producto</h2>
    <form action="/api/productos" method="post" enctype="application/json">
        <label for="title">Nombre</label>
        <input type="text" name="name"/>
        <br>
        <label for="price">Precio</label>
        <input type="number" name="price">
        <br>
        <label for="thumbnail">Ingrese link a la imagen del producto</label>
        <input type="text" name="thumbnail" min="0" max="120"/>
        <br>
        <button type="submit">Enviar</button>
    </form>
    <a href="/api/productos">Ver productos ingresados</a>

    <%- include("../partials/footer.ejs"); %>
    
</body>
</html>